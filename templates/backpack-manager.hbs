<form class="backpack-manager">
  <section class="stowed">
    <header class="stowed-header" title="{{localize 'BACKPACK_MANAGER.STOW_HEADER'}}">
      {{localize 'BACKPACK_MANAGER.STOWED'}}: {{bag}} ({{value}} / {{max}})
    </header>
    <div class="stowed-content">
      {{#each stowed as |item|}}
      <div class="item">
        <div class="item-details" data-uuid="{{item.uuid}}">
          <img src="{{item.img}}">
          <a title="{{localize 'BACKPACK_MANAGER.SHOW'}}">
            {{item.name}} {{#if (backpackManagerCheckqty item.system.quantity)}}({{item.system.quantity}}){{/if}}
          </a>
        </div>
        <div class="functions">
          {{#if (backpackManagerCheckqty item.system.quantity)}}
          <div class="quantities">
            <a data-type="less" title="{{localize 'BACKPACK_MANAGER.LESS'}}">
              <i class="fa-solid fa-arrow-left"></i>
            </a>
            <input type="number" title="{{localize 'BACKPACK_MANAGER.VALUE'}}" class="current"
              value="{{item.system.quantity}}" data-max="{{item.system.quantity}}" disabled>
            <a data-type="more" title="{{localize 'BACKPACK_MANAGER.MORE'}}">
              <i class="fa-solid fa-arrow-right"></i>
            </a>
          </div>
          {{/if}}
          <a data-type="retrieve" title="{{localize 'BACKPACK_MANAGER.RETRIEVE'}}">
            <i class="fa-solid fa-arrow-right-arrow-left"></i>
          </a>
          <a data-type="delete" title="{{localize 'BACKPACK_MANAGER.DELETE'}}">
            <i class="fa-solid fa-trash"></i>
          </a>
        </div>
      </div>
      {{/each}}
    </div>
  </section>

  <section class="inventory">
    <header class="inventory-header" title="{{localize 'BACKPACK_MANAGER.INVENTORY_HEADER'}}">
      {{localize 'BACKPACK_MANAGER.INVENTORY'}}: {{actor}}
    </header>
    <div class="inventory-content">
      {{#each items as |item|}}
      <div class="item">
        <div class="item-details" data-uuid="{{item.uuid}}">
          <img src="{{item.img}}">
          <a title="{{localize 'BACKPACK_MANAGER.SHOW'}}">
            {{item.name}} {{#if (backpackManagerCheckqty item.system.quantity)}}({{item.system.quantity}}){{/if}}
          </a>
        </div>
        <div class="functions">
          {{#if (backpackManagerCheckqty item.system.quantity)}}
          <div class="quantities">
            <a data-type="less" title="{{localize 'BACKPACK_MANAGER.LESS'}}">
              <i class="fa-solid fa-arrow-left"></i>
            </a>
            <input type="number" title="{{localize 'BACKPACK_MANAGER.VALUE'}}" class="current"
              value="{{item.system.quantity}}" data-max="{{item.system.quantity}}" disabled>
            <a data-type="more" title="{{localize 'BACKPACK_MANAGER.MORE'}}">
              <i class="fa-solid fa-arrow-right"></i>
            </a>
          </div>
          {{/if}}
          <a data-type="stow" title="{{localize 'BACKPACK_MANAGER.STOW'}}">
            <i class="fa-solid fa-box-archive"></i>
          </a>
        </div>
      </div>
      {{/each}}
    </div>
  </section>
  <footer class="button-section">
    <button name="close">
      <i class="fa-solid fa-briefcase"></i> {{localize "Close"}}
    </button>
  </footer>
</form>
